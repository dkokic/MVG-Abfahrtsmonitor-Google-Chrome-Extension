{
   "manifest_version": 2,

   "name": "MVG Abfahrtsmonitor",
   "description": "Immer up-to-date mit dem MVV.",
   "version": "0.4.0.0",

   "permissions": [ "tabs", "http://www.mvg-live.de/" ],

   "background": {
      "page": "background.html"
   },

   "options_page": "options.html",
   
   "browser_action": {
      "default_icon": "images/mvg-logo-96x96.png",
      "default_title": "MVG Abfahrtsmonitor (dev)",
      "default_popup": "popup.html"
   },

   "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",

   "icons": {
      "128": "images/mvg-logo-63x26.jpg",
      "48": "images/mvg-logo-96x96.png",
      "64": "images/mvg-logo-63x26.jpg"
   }
}
